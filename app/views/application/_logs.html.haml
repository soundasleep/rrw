- if errors and errors.length > 0
  .error-log
    %ul
      - errors.each do |e|
        %li.error
          = e
      - clear_errors

- if combat_log and combat_log.length > 0
  .combat-log
    %ul
      - combat_log.each do |e|
        %li.log
          = e
      - clear_combat_log

.chat-log
  %ul.chat
    - if @chat
      - @chat.each do |chat|
        %li.chat-template{ :class => chat[:classes] }
          %span.time #{chat[:render_time]}
          %span.text #{chat[:render_text]}

  .say-something
    = form_tag("/world/say", method: "post") do
      = text_field_tag(:text)
      = submit_tag("Chat")

  %li.chat-template{ :style => "display: none;" }
    %span.time 00:00
    %span.text Loading...
